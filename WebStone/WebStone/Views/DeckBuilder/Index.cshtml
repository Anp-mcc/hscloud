@using WebStone.HtmlHelpers
@model WebStone.Models.CreateDeckViewModel

@{
    Layout = MVC.Shared.Views._Layout;
}

<div>
    @foreach (var heroType in @Model.HeroTypes)
    {
        @Html.Image(@heroType)
    }
</div>

<div>
    @foreach (var card in @Model.Cards)
    {
        @Html.ActionLink(card.Name, "Index", new {cardId = @card.Id})
        <br/>
    }
</div>
<br/>
<div>
    @foreach (var card in @Model.Deck.Cards)
    {
        <b>@card.Name</b>
        <br/>
    }
</div>

<div>
    <input type="button" id="loadCards" value="LoadCards" />
    <input type="hidden" id="displayname" />
    <ul id="discussion">
    </ul>
</div>
<!--Script references. -->
<!--Reference the jQuery library. -->
<script src="~/Scripts/jquery-1.6.4.min.js" ></script>
<!--Reference the SignalR library. -->
<script src="~/Scripts/jquery.signalR-2.2.0.min.js"></script>
<!--Reference the autogenerated SignalR hub script. -->
<script src="signalr/hubs"></script>
<!--Add script to update the page and send messages.--> 
<script type="text/javascript">
    $(function () {
        // Declare a proxy to reference the hub. 
        var cardsHub = $.connection.loadCardsHub;
        // Create a function that the hub can call to broadcast messages.
        cardsHub.client.showCards = function (cards) {
            cards.forEach(function(item) {
                var encodedName = $('<div />').text(item.Name).html();
                var encodedMsg = $('<div />').text(item.Text).html();
                // Add the message to the page. 
                $('#discussion').append('<li><strong>' + encodedName
                    + '</strong>:&nbsp;&nbsp;' + encodedMsg + '</li>');
            });
            // Html encode display name and message. 

        };

        $.connection.hub.start().done(function () {
            $('#loadCards').click(function () {
                // Call the Send method on the hub. 
                cardsHub.server.loadCards();
                // Clear text box and reset focus for next comment. 
            });
        });
    });
</script>
